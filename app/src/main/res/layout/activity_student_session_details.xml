<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSessionDetailsActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Title"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Code"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location / Online Link"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="8dp"/>

            <!-- RSVP Buttons -->
            <TextView
                android:id="@+id/textRSVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RSVP:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/rsvpGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rsvpYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rsvpNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp"/>

                <RadioButton
                    android:id="@+id/rsvpMaybe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maybe"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <EditText
                android:id="@+id/editNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Optional notes"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/buttonSubmitRSVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit RSVP"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/buttonJoinLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Session"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>